<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <TextView
            android:id="@+id/textViewPowerWolves"
            android:layout_width="239dp"
            android:layout_height="52dp"
            android:textSize="20dp"
            android:text="PowerWolves"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/editTextPowerWolves"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.505"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.825" />

        <EditText
            android:id="@+id/editTextPowerWolves"
            android:layout_width="257dp"
            android:layout_height="75dp"
            android:ems="10"
            android:inputType="text"
            android:text="DemonAreGirlBestFriend"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonNextPowerWolves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginTop="64dp"
            android:text="Next"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.707"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevPowerWolves"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves" />

        <Button
            android:id="@+id/buttonPrevPowerWolves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="64dp"
            android:text="Previous"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves" />

        <Button
            android:id="@+id/buttonPausePowerWolves"
            android:layout_width="75dp"
            android:layout_height="40dp"
            android:layout_marginTop="70dp"
            android:text="â– "
            app:layout_constraintEnd_toStartOf="@+id/buttonNextPowerWolves"
            app:layout_constraintStart_toEndOf="@+id/buttonPrevPowerWolves"
            app:layout_constraintTop_toBottomOf="@+id/editTextPowerWolves" />

</androidx.constraintlayout.widget.ConstraintLayout>