<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShareActivity">


    <TextView
        android:id="@+id/textTitle"
        android:layout_width="419dp"
        android:layout_height="51dp"
        android:text="Любимая книга разработчика"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textQuote"
        android:layout_width="412dp"
        android:layout_height="44dp"
        android:text="Цитата из книги"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="327dp" />

    <EditText
        android:id="@+id/editTitle"
        android:layout_width="405dp"
        android:layout_height="43dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Введите название Вашей любимой книги"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textTitle" />

    <EditText
        android:id="@+id/editQuote"
        android:layout_width="406dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:text=""
        android:hint="Введите цитату из Вашей любимой книги"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textQuote" />

    <Button
        android:id="@+id/button3"
        android:layout_width="237dp"
        android:layout_height="63dp"
        android:layout_marginTop="86dp"
        android:text="Отправить данные"
        app:layout_constraintTop_toBottomOf="@+id/editQuote"
        tools:layout_editor_absoluteX="87dp" />
</androidx.constraintlayout.widget.ConstraintLayout>